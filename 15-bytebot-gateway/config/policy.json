{
  "version": "1.0",
  "capabilities": {
    "fs.read": {
      "enabled": true,
      "description": "Read files from filesystem",
      "risk_level": "low",
      "allowed_paths": ["/tmp", "/home/user"],
      "max_file_size": 10485760
    },
    "fs.write": {
      "enabled": true,
      "description": "Write files to filesystem",
      "risk_level": "medium",
      "allowed_paths": ["/tmp", "/home/user"],
      "max_file_size": 10485760
    },
    "browser": {
      "enabled": true,
      "description": "Control web browser",
      "risk_level": "medium",
      "allowed_domains": ["*"],
      "timeout_seconds": 30
    },
    "shell": {
      "enabled": false,
      "description": "Execute shell commands",
      "risk_level": "high",
      "allowed_commands": ["ls", "cat", "echo"],
      "timeout_seconds": 10
    },
    "screenshot": {
      "enabled": true,
      "description": "Take screenshots",
      "risk_level": "low",
      "max_resolution": "1920x1080",
      "timeout_seconds": 5
    },
    "open_app": {
      "enabled": true,
      "description": "Open applications",
      "risk_level": "medium",
      "allowed_apps": ["firefox", "chrome", "code", "terminal"],
      "timeout_seconds": 10
    },
    "edit_file": {
      "enabled": true,
      "description": "Edit text files",
      "risk_level": "medium",
      "allowed_extensions": [".txt", ".md", ".py", ".json"],
      "max_file_size": 1048576
    },
    "run": {
      "enabled": false,
      "description": "Run arbitrary commands",
      "risk_level": "high",
      "timeout_seconds": 30
    }
  },
  "global_limits": {
    "max_concurrent_tasks": 3,
    "max_task_duration": 300,
    "rate_limit_per_minute": 10,
    "max_artifacts_per_task": 5
  },
  "security": {
    "require_signature": true,
    "signature_algorithm": "HMAC-SHA256",
    "token_expiry_seconds": 3600,
    "audit_log_enabled": true
  }
}
